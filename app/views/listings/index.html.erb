<div class="jumbotron">
<center><h1>Food Delivered To You</h1>
<h3>Order from any local restaurant - We'll pick it up and deliver it to you</h3></center>
</div>

<div class="center">
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        
      <div class="caption"
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <p><%= "Sold By #{listing.user.name}" %></p>
        
       
      </div>
    </div>
  </div>
    <% end %>
  </div>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
</div>